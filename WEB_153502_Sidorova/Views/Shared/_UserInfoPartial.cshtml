@if (User.Identity.IsAuthenticated){
    @await Component.InvokeAsync("Cart")

    <div class="dropdown ms-4 nav-color">
        <button class="btn btn-secondary dropdown-toggle"
                type="button" id="dropdownMenuButton"
                data-bs-toggle="dropdown"
                aria-expanded="false">
            @User.Claims.FirstOrDefault(c=>c.Type.Equals("Name",StringComparison.OrdinalIgnoreCase))?.Value
            <img src="https://localhost:7003/avatar" width="30"
                 alt="User" class="nav-color" style="border-radius: 50%" />
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <li>
                <span class="dropdown-item-text">
                    <img src="https://localhost:7003/avatar"
                         width="50" alt="User" style="border-radius: 50%" /><br>
                @User.Claims.FirstOrDefault(c=>c.Type.Equals("Name",StringComparison.OrdinalIgnoreCase))?.Value
                </span>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form method="post" id="logoutForm" class="form-inline">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark" asp-controller="Identity" asp-action="Logout">
                        Logout
                    </button>
                </form>
            </li>
        </ul>
    </div>
} 
else {
    <div class="ms-auto navbar-text navbar-navr">
        <div id="loginForm" class="form-inline float-md-end">
            <a id="login" class="nav-link btn btn-link text-light" asp-controller="Identity" asp-action="Login">
                Login
            </a>
        </div>
    </div>
}   