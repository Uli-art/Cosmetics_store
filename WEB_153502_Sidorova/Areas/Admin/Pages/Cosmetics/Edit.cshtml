@page
@model WEB_153502_Sidorova.Areas.Admin.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Cosmetics</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cosmetics.Id" />
            <div class="form-group">
                <label asp-for="Cosmetics.Name" class="control-label"></label>
                <input asp-for="Cosmetics.Name" class="form-control" />
                <span asp-validation-for="Cosmetics.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cosmetics.Description" class="control-label"></label>
                <input asp-for="Cosmetics.Description" class="form-control" />
                <span asp-validation-for="Cosmetics.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cosmetics.Price" class="control-label"></label>
                <input asp-for="Cosmetics.Price" class="form-control" />
                <span asp-validation-for="Cosmetics.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cosmetics.Image" class="control-label"></label>
                <input class="form-control" asp-for="Cosmetics.Image">
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <div asp-for="Image" class="input-group">
                    <input asp-for="Image" type="file" class="form-control" accept="image/*">
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
