@page
@model WEB_153502_Sidorova.Areas.Admin.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cosmetics</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cosmetics.Name" class="control-label"></label>
                <input asp-for="Cosmetics.Name" class="form-control" />
                <span asp-validation-for="Cosmetics.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cosmetics.Description" class="control-label"></label>
                <input asp-for="Cosmetics.Description" class="form-control" />
                <span asp-validation-for="Cosmetics.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cosmetics.Price" class="control-label"></label>
                <input asp-for="Cosmetics.Price" class="form-control" />
                <span asp-validation-for="Cosmetics.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Image" class="control-label"></label>
                <input asp-for="@Model.Image" class="form-control" type="file" accept="image/*,image/jpeg">
                <span asp-for="Image"  asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input  asp-for="@Model.Image" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
